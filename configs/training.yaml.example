experiment_name: two_stream_lstm_penalty
seed: 42
device: cuda
save_best_only: true
save_every_n_epochs: 10
resume_from_checkpoint: null
debug: false

model:
  input_size: 768
  num_classes: 3
  hidden_size: 256
  num_layers: 2
  dropout: 0.3
  bidirectional: true
  metadata_size: 16

data:
  data_dir: "/path/to/embedded"
  label_field: side
  batch_size: 32
  num_workers: 4
  pin_memory: true
  train_split: 0.7
  val_split: 0.15
  test_split: 0.15
  n_folds: 10

training:
  num_epochs: 100
  learning_rate: 0.001
  weight_decay: 0.0001
  optimizer: adam
  scheduler: reduce
  scheduler_patience: 10
  scheduler_factor: 0.5
  early_stopping_patience: 20
  gradient_clip_val: 1.0
  mixed_precision: false

loss:
  use_class_weights: true
  focal_loss: false
  focal_gamma: 2.0
  focal_alpha: null
  label_smoothing: 0.1

checkpoint_dir: "path/to/checkpoints"
log_dir: "path/to/logs"
